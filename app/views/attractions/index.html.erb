<h1> Here are all our attractions </h1> 

<% if current_user.admin %>

<ul>
<% @attractions.each do |attraction| %>
  <li><%= link_to "Show #{attraction.name}", attraction_path(attraction) %></li>
<% end %>
</ul>
<%= link_to "New Attraction", new_attraction_path %>

<% else %>

<% @attractions.each do |a| %>
    <li> <%= link_to "Go on #{a.name}", attraction_path(a) %> </li>
    <% end %>
<% end %>