<table>
    <% @attractions.each do |ride| %>
        <tr> 
            <td><%= ride.name %></td>
            <td><%= ride.tickets %></td>
            <% if current_user.admin %>
                <td><%= link_to "Show #{ride.name}", attraction_path(ride) %></td>
            <% else %>
                <td><%= link_to "Go on #{ride.name}", attraction_path(ride) %></td>
            <% end %>
        </tr>
    <% end %>
</table>

<% if current_user.admin %>
    <%= link_to 'New Attraction', new_attraction_path %>
<% end %>
